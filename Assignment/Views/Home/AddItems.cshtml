@model Assignment.Models.ApplicationUser

@{
    ViewBag.Title = "Add Item to the list - BikeWale";
}

<h1 class="left-align" style="color: #f18b8f; ">AddItems:</h1>
<blockquote>
    <p class="flow-text">Fill the below form and add an item to the list</p>
</blockquote>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form method="post" action="/Home/AddItems">

        @if (ViewBag.error == true)
        {
            <div class="alert alert-danger" role="alert">
                Value cannot be negative
            </div>
        }

        @*<div class="form-group">
