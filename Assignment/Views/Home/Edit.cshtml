@{
    ViewBag.Title = "Edit";
}

<h2>Edit:</h2>

@using (Html.BeginForm())
{    
    <form method="post" action="/Home/">
        <div class="form-group">
            <label>Id</label>
            <input type="text" id="pid" name="pid" class="form-control" value="@ViewBag.prod.Id" disabled>
        </div>

        
        <div class="form-group">
            <label>Name</label>
            <input type="text" id="name" name="name" class="form-control" value="@ViewBag.prod.Name">
        </div>        

        <div class="form-group">
            <label>Description</label>
            <textarea id="description" name="description" class="form-control" rows="3">@ViewBag.prod.Description</textarea>
        </div>        

        <div class="form-group">
            <label>Brand</label>
            <select class="form-control" id="brand" name="brand">
                <option>Bajaj</option>
                <option>Accenture</option>
                <option>Honda</option>
            </select>
        </div>

        <div class="form-group">
            <label>Quantity</label>
            <input type="number" id="quantity" name="quantity" class="form-control" value="@ViewBag.prod.Quantity">
        </div>

        <div class="form-group">
            <label>Price</label>
            <input type="number" id="price" name="price" class="form-control" value="@ViewBag.prod.Price">
        </div>


        <button type="submit" class="btn btn-primary">Submit</button>
        <span class="btn btn-warning"> <a href="/Home/Index"> Cancel </a> </span>
    </form>
}




