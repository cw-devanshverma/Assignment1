@{
    ViewBag.Title = "List of all currently available bikes - BikeWale";
}

<h1 class="left-align" style="color: #f18b8f; ">List of Bikes:</h1>
<blockquote>
    <p class="flow-text">List of all bike available and there detailed descrption.</p>
</blockquote>


@if (ViewBag.result != null)
{
    <div class="alert alert-success" role="alert">@ViewBag.result</div>
}




<table class="table">
    <thead class="thead-light">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Brand</th>
            <th scope="col">Quantity</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @if (ViewBag.Items != null)
        {
            foreach (Assignment.Controllers.Product p in ViewBag.Items)
            {
                <tr>
                    <td scope="row">@p.Id</td>
                    <td>@p.Name</td>
                    <td>@p.Description</td>
                    <td>@p.Brand</td>
                    <td>@p.Quantity</td>
                    <td>@p.Price</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { pid = p.Id }, new { title = "Edit item" }) |
                        @Html.ActionLink("Delete", "DeleteL", new { id = p.Id }, new { title = "Delete item" })

                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6">No product</td>
            </tr>
        }
    </tbody>
</table>
